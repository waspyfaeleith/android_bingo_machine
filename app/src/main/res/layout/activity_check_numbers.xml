<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sandy.bingomachine.CheckNumbersActivity">

    <TextView
        android:layout_width="383dp"
        android:layout_height="51dp"
        android:id="@+id/checking_numbers"
        android:text="@string/checking_numbers"
        android:height="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="122dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.466" />

    <TextView
        android:layout_width="349dp"
        android:layout_height="49dp"
        android:id="@+id/last_called"
        android:height="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:textSize="25dp"
        android:text="@string/last_number_called"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.136"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.526" />

    <GridView
        android:id="@+id/numberGrid"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:columnWidth="5dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:horizontalSpacing="5dp"
        android:numColumns="10"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="167dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
